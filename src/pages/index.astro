---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import InfoBoks from "../components/InfoBoks.astro";
import Header from "../components/Header.astro";
import QuoteBoks from "../components/QuoteBoks.astro";
import ScrollBar from "../components/ScrollBar.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Pierre Falcke</title>
	</head>
	<body>
		<main>
			<section>
				<Header variant="first"
				text1="Det uperfekte"
				text2="Er perfekt"
				<div><Image src={headerimage} format="svg" alt="header background picture"</div>>
				>
				</Header>
			</section>
			
			<div>
				<QuoteBoks>
					<h3>Om ganske få år er hele branchen digital, og dem der ikke hopper med på den digitale vogn <span class="highlight">lukker.</span></h3>
				</QuoteBoks>
			</div>
			
		</main>
	</body>
</html>

<style>

h1 span{
	font-family: 'Courier New', Courier, monospace;
}
.highlight{
	color: rgb(204, 24, 54);
}

h3 span{
	font-weight: 700;
}


</style>
